{
  "name": "@oxog/plugin",
  "version": "1.0.0",
  "description": "Micro-kernel plugin system for the @oxog ecosystem with typed events, lifecycle hooks, and dependency resolution.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:coverage"
  },
  "keywords": [
    "plugin",
    "micro-kernel",
    "event-bus",
    "dependency-injection",
    "lifecycle",
    "typed-events",
    "plugin-system",
    "modular",
    "extensible",
    "architecture",
    "oxog"
  ],
  "author": "Ersin KoÃ§",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ersinkoc/plugin"
  },
  "bugs": {
    "url": "https://github.com/ersinkoc/plugin/issues"
  },
  "homepage": "https://plugin.oxog.dev",
  "dependencies": {
    "@oxog/types": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
